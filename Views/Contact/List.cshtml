@model IEnumerable<IMS.Models.Contact>

@{
    ViewData["Title"] = "Contact List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<h2>Contact Messages</h2>

<table class="table" style="text-align : center">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">User Name</th>
            <th scope="col">Message</th>
            <th scope="col">Is Valid</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Contact message in Model)
        {
            <tr>
                <th>@message.Id</th>
                <td>@message.Name</td>
                <td>@message.Message</td>
                <td>
                    @if (message.IsValid == true)
                    {
                        <p>Yes</p>
                    }
                    else if (message.IsValid == null)
                    {
                        <p>...</p>
                    }
                    else
                    {
                        <p>No</p>
                    }
                <td>@message.Email</td>
                <td>@message.Phone</td>
                <td>
                    <a href="#" data-toggle="modal" data-target="#message@(message.Id)">Details</a>
                </td>
                <td>
                        @if (message.IsValid == true)
                        {
                        <a asp-action="MarkValid" asp-route-id="@message.Id">Mark as Invalid</a>
                        }
                        else
                        {
                        <a asp-action="MarkValid" asp-route-id="@message.Id">Mark as Valid</a>
                        }
                </td>
            </tr>
            <div class="modal fade" id="message@(message.Id)" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Detail</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form>
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Name</label>
                                    <input type="text" class="form-control" id="recipient-name" value="@message.Name" disabled>
                                </div>
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Phone</label>
                                    <input type="text" class="form-control" id="recipient-name" value="@message.Phone" disabled>
                                </div>
                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" @(message.IsValid == true ? "checked" : "") disabled>
                                        <label class="form-check-label" for="gridRadios1">
                                            Mark as valid
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2" @(message.IsValid == false ? "checked" : "") disabled>
                                        <label class="form-check-label" for="gridRadios2">
                                            Mark as invalid
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="message-text" class="col-form-label">Message</label>
                                    <textarea class="form-control" id="message-text" disabled>@message.Message</textarea>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>
<div style="text-align: center">
    @for (int i = 1; i <= ViewBag.totalPage;i++)
    {
        <a asp-action="List" asp-controller="Contact" asp-route-page="@i" style="@(i == ViewBag.pageNum ? "color : red" : "")">@i</a>
    }
</div>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
