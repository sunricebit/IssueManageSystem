        $("#selectCate").removeClass("input-validation-error");
        selectError.text("");
        $("#descriptionInput").removeClass("input-validation-error");
        descriptionError.text("");
        $("#titleInput").removeClass("input-validation-error");
        titleError.text("");

        // Kiểm tra
