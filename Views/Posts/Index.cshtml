                                </div>

                            </div>
                            <div class="form-group mb-4">
                                <label asp-for="Title" class="control-label">Title*</label>
                                <input asp-for="Title" id="titleInput" class="form-control" />
                                <span id="titleError" style="color:rgba(var(--bs-danger-rgb));" class="field-validation-error"></span>
                            </div>
                            <div class="form-group mb-4">
                            <label asp-for="Excerpt" class="control-label">Excerpt*</label>
                            <input asp-for="Excerpt"  class="form-control" />
                        </div>
                            <div class="form-group mb-4 ">
                                <label asp-for="IsPublic" class="form-check-label">
                                    Public
                                </label>
                                <input asp-for="IsPublic" class="is-public-checkbox" style="height:15px; width:15px" type="checkbox" />

                            </div>

                            <div class="form-group mb-4">

                                @* Hiển thị select khi đang ở chế độ chỉnh sửa *@
                                <select id="selectCate" name="category" id="category" asp-items="ViewBag.Setting" class="form-control">
                                    <option value="Category*" class="form-control">Category*</option>
                                </select>
                                @*<input asp-for="Category" class="form-control"  readonly />*@
                                <span id="selectError" style="color:rgba(var(--bs-danger-rgb));" class="field-validation-error"></span>
                            </div>
                            <div class="form-group form-group-textarea mb-md-0 mb-4" style="height:100%">
                                <label asp-for="Description" class="control-check-label">Description*</label>
                                <textarea asp-for="Description" id="descriptionInput" class="descriptionInput form-control" style="height:220px"></textarea>
                                <span id="descriptionError" style="color:rgba(var(--bs-danger-rgb));" class="field-validation-error"></span>
                            </div>
                        </div>
                        @*<div class="col-md-6">*@


                        @*</div>*@
                    </div>
                    <div class="d-flex" style="justify-content: space-between;">
                        <div></div>
                        <input type="submit" value="Save" @*onclick="validateAndSubmit()"*@ style="background-color: #43A047;border: none; color:white;border-radius:5px;margin-top:10px;  height:40px;" id="saveButton" />
                    </div>
                     </form>

            </div>
           
        </div>
    </div>
</div>

<!---popupReport--->
<div class="modal" tabindex="-1" id="popupReport" style="background-color:#2220208c">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Report</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="closePopup('popupReport')"></button>
            </div>
            <!-- Nội dung của popupReport -->
            <div class="modal-body" style="max-height: 500px; overflow-y: auto;">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>CreateDate</th>
                            <th>Content</th>
                        </tr>
                    </thead>
                    <tbody id="reportTableBody" class="reportTableBody">
                        <!-- Dữ liệu báo cáo sẽ được thêm vào đây -->
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Close" onclick="closePopup('popupReport')" style="background-color: gray;border-radius: 3px; margin-top:9px" />
            </div>
        </div>
    </div>
</div>

