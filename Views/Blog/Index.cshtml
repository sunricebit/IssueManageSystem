</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" href="#page-top">IMS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars ms-1"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
                    <li class="nav-item"><a class="nav-link" style="color: #3399CC;" id="abc" href="/landing#services">Services</a></li>
                    <li class="nav-item"><a class="nav-link" style="color: #3399CC;" id="Team" href="/landing#team">Team</a></li>
                    <li class="nav-item"><a class="nav-link" style="color: #ffc800;" id="BlogList" href="/blog">BlogList</a></li>
                    <li class="nav-item"><a class="nav-link" style="color: #3399CC;" id="Contact" href="/landing#contact">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" style="color: #3399CC;" href="auth/sign-in">Login</a></li>
                    <li class="nav-item"><a class="nav-link" style="color: #3399CC;" href="auth/sign-up">Register</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="tm-hero d-flex  align-items-center" >
        <div class="d-flex justify-content-between ">
            <form asp-action="Index" method="get" class="d-flex">
                <div class="d-flex m-2">
                    <select name="filterCat" asp-items="ViewBag.Setting"
                            class="form-control"
                            style="border-radius: 7px;">
                        <option value="Category" class="form-control">Category</option>
                    </select>
                    <button class="btn btn-outline-success" style="border-radius: 7px;">Filter</button>
                </div>
                 <div class="d-flex m-2">
                    <select name="filterAuthor" asp-items="ViewBag.Author"
                            class="form-control"
                            style="border-radius: 7px;">
                        <option value="Author" class="form-control">Author</option>
                    </select>
                    <button class="btn btn-outline-success" style="border-radius: 7px;">Filter</button>
                </div>
                <div class="d-flex m-2">
                    <input class="form-control tm-search-input" type="search" placeholder="Search" aria-label="Search" value="@ViewBag.Search" name="searchTerm" style="border-radius: 7px;">
                    <button class="btn btn-outline-success tm-search-btn" type="submit" style="border-radius: 7px;">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>

        </div>
    </div>

    <div class="container-fluid tm-container-content tm-mt-60">

        <div class="row tm-mb-90 tm-gallery">
            @foreach (var post in ViewBag.PostList)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-12 mb-5">
                    @if (@post.ImageUrl == null)
                    {
                        <figure class="effect-ming tm-video-item" style="width: 280px; height: 260px;">
                            <img src="~/img/pastel-aesthetic-6pgnuy5ocxtm1r29.jpg" alt="Image" class="img-fluid" style="width: 280px; height: 260px; object-fit: cover;">
                            <figcaption class="d-flex align-items-center justify-content-center">
                                <h2>View</h2>
                                <a asp-action="Detail" asp-route-id="@post.Id">View more</a>
                            </figcaption>
                        </figure>
                    }
                    else
                    {
                        <figure class="effect-ming tm-video-item" style="width: 280px; height: 260px;">
                            <img src="@post.ImageUrl" alt="Image" class="img-fluid" style="width: 280px; height: 260px; object-fit: cover;">
                            <figcaption class="d-flex align-items-center justify-content-center">
                                <h2>View</h2>
                                <a asp-action="Detail" asp-route-id="@post.Id">View more</a>
                            </figcaption>
                        </figure>
                    }

                    <div class="d-grid justify-content-between tm-text-gray" style="width: 280px;">
                        <h4 class="tm-text" style="color:#009999">@post.Title</h4>
                        <span >@post.Excerpt</span>
                        <span class="tm-text-gray-light">Author: @post.AuthorName</span>
                        <span class="tm-text-gray-light">Category: @post.CategoryName</span>
                    </div>
                </div>
            }
