        </div> <!-- row -->
      <div class="row tm-mb-90">
            <div class="col-12 d-flex justify-content-between align-items-center tm-paging-col">
                @if (ViewBag.CurrentPage > 1)
                {
                    <a class="btn btn-Primary tm-btn-prev mb-2 " href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, pageSize = ViewBag.PageSize, searchTerm = ViewBag.Search })">&laquo; Previous</a>
                }
                else
                {
                    <a class="btn btn-Primary tm-btn-prev mb-2 disabled">&laquo; Previous</a>

                }
                <div class="tm-paging d-flex">

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <a class="@((i == ViewBag.CurrentPage) ? "active" : "") tm-paging-link" href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize, searchTerm = ViewBag.Search })">@i</a>
                    }

                </div>
                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, pageSize = ViewBag.PageSize, searchTerm = ViewBag.Search })" class="btn btn-Primary tm-btn-next">Next &raquo;</a>
                }
                else
                {
                    <a class="btn btn-Primary tm-btn-prev mb-2 disabled">Next &raquo;</a>

                }
            </div>
        </div>
   </div> <!-- container-fluid, tm-container-content -->


