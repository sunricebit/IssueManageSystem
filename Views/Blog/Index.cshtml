@model IMS.Models.Post;
@{
    Layout = "~/Views/Shared/_layoutBlog.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    @*<link rel="stylesheet" href="~/css/landing.css">*@
    <link rel="stylesheet" href="~/css/post.css">
    <!--

    TemplateMo 556 Catalog-Z

    https://templatemo.com/tm-556-catalog-z

    -->

</head>
<body>

    <div class="container-fluid tm-container-content tm-mt-60">

        <div class="row tm-mb-90 tm-gallery">
            @foreach (var post in ViewBag.PostList)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-12 mb-5">
                    @if (@post.ImageUrl == null)
                    {
                        <figure class="effect-ming tm-video-item" style="width: 280px; height: 260px;">
                            <img src="~/img/pastel-aesthetic-6pgnuy5ocxtm1r29.jpg" alt="Image" class="img-fluid" style="width: 280px; height: 260px; object-fit: cover;">
                            <figcaption class="d-flex align-items-center justify-content-center">
                                <h2>View</h2>
                                <a asp-action="Detail" asp-route-id="@post.Id">View more</a>
                            </figcaption>
                        </figure>
                    }
                    else
                    {
                        <figure class="effect-ming tm-video-item" style="width: 280px; height: 260px;">
                            <img src="@post.ImageUrl" alt="Image" class="img-fluid" style="width: 280px; height: 260px; object-fit: cover;">
                            <figcaption class="d-flex align-items-center justify-content-center">
                                <h2>View</h2>
                                <a asp-action="Detail" asp-route-id="@post.Id">View more</a>
                            </figcaption>
                        </figure>
                    }

                    <div class="d-grid justify-content-between tm-text-gray" style="width: 280px;">
                        <h4 class="tm-text" style="color:#009999">@post.Title</h4>
                        <span >@post.Excerpt</span>
                        <span class="tm-text-gray-light">Author: @post.AuthorName</span>
                        <span class="tm-text-gray-light">Category: @post.CategoryName</span>
                    </div>
                </div>
            }
        </div> <!-- row -->
      <div class="row tm-mb-90">
            <div class="col-12 d-flex justify-content-between align-items-center tm-paging-col">
                @if (ViewBag.CurrentPage > 1)
                {
                    <a class="btn btn-Primary tm-btn-prev mb-2 " href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, pageSize = ViewBag.PageSize, searchTerm = ViewBag.Search })">&laquo; Previous</a>
                }
                else
                {
                    <a class="btn btn-Primary tm-btn-prev mb-2 disabled">&laquo; Previous</a>

                }
                <div class="tm-paging d-flex">

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <a class="@((i == ViewBag.CurrentPage) ? "active" : "") tm-paging-link" href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize, searchTerm = ViewBag.Search })">@i</a>
                    }

                </div>
                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                    <a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, pageSize = ViewBag.PageSize, searchTerm = ViewBag.Search })" class="btn btn-Primary tm-btn-next">Next &raquo;</a>
                }
                else
                {
                    <a class="btn btn-Primary tm-btn-prev mb-2 disabled">Next &raquo;</a>

                }
            </div>
        </div>
   </div> <!-- container-fluid, tm-container-content -->


    <script src="js/plugins.js"></script>
    <script>

    </script>
</body>
</html>
