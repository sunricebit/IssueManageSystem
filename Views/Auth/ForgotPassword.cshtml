@model IMS.ViewModels.Auth.ForgotPasswordViewModel;

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

@using (Html.BeginForm("ForgotPassword", "Auth", FormMethod.Post))
{
    <div class="form-group mb-3">
        <label asp-for="Email">Email <span class="text-danger">*</span></label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>


    <div class="form-group mb-3">
        <a class="text-primary text-decoration-none" href="/auth/sign-in">You already have an account?</a>
    </div>

    <button type="submit" class="btn btn-primary w-100">Submit</button>
}