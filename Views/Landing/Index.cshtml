            <!-- https://startbootstrap.com/solution/contact-forms-->
            <!-- to get an API token!-->
            
            @using (Html.BeginForm("Index", "Landing", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row align-items-stretch mb-5">
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", style="height: 65px;font-weight:bold;font-size:large;",placeholder="Your Name*" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", style="height: 65px;font-weight:bold;font-size:large;",placeholder="Your Email*" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-4">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", style="height: 65px;font-weight:bold;font-size:large;",placeholder="Your Phone" })
                            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-md-0 mb-4">
                            <select asp-for="Id" cdlass="form-control" asp-items="ViewBag.Setting"
                                class="form-control" 
                                style="height: 65px;font-weight:bold;font-size:large;color: #6c757d">
                                <option value="Contact type *" class="form-control">Contact type *</option>
                        </select>
                            <span  style="color:rgba(var(--bs-danger-rgb));" class="field-validation-error">@ViewBag.Error</span>
                            @*@Html.ValidationMessageFor(m => m.Id, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                    <div class="col-md-6">
                      
                        <div class="form-group form-group-textarea mb-md-0" style="height:100%">
                            @Html.TextAreaFor(m => m.Content, new { @class = "form-control",placeholder="Your Message *" ,style="height: 100%;font-weight:bold;font-size:large;" })
                            @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
                           
                        </div>
                    </div>
                </div>

                <div class="text-center"><button class="btn btn-primary btn-xl text-uppercase" id="submitButton" type="submit">Send Message</button></div>

            }
        </div>
    </section>


