                    </div>

                    <div class="form-group">
                        <label for="milestones.Description">Milestone Description</label>
                        <textarea class="form-control" name="milestones.Description" readonly>@Milestone.Description</textarea>
                    </div>
                </div>
            }
        </div>*@
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">Create</button>
            <button type="reset" class="btn btn-primary">Reset</button>
            <a href="/Class" class="btn btn-primary">Back to Classes</a>
        </div>
    </div>
 
  
</form>
