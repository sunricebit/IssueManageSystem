@{
    ViewData["Title"] = "User List";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Settings</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Setting List
        </div>
        <div class="card-body">
            @{
                if (ViewBag.SettingList != null)
                {
                    <table class="table table-bordered" id="sortable-table">
                        <thead>
                            <tr>
                                <th onclick="sortTable(0)" class="sortable">Id</th>
                                <th onclick="sortTable(1)" class="sortable">Type</th>
                                <th onclick="sortTable(2)" class="sortable">Value</th>
                                <th class="sortable">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var setting in ViewBag.SettingList)
                            {
                                <tr>
                                    <td>@setting.Id</td>
                                    <td>@setting.Type</td>
                                    <td>@setting.Value</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@setting.Id" asp-controller="Setting" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No settings available.</p>
                }
            }
        </div>
        
    </div>
</div>
<script src="~/js/datatables-sort.js" asp-append-version="true"></script>