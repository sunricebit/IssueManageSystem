@model IMS.ViewModels.Validation.ProjectViewModel
@{
    ViewData["Title"] = "Add Project";
    string confirmMessage = "Are you want to add this project ?";
}
<div class="container mt-5">
    <h2>Add Project</h2>

    <!-- Form để thêm Project -->
    <form asp-action="CreateProject" method="post" class="needs-validation"  id="formSubmit">
        <!-- Validation Summary -->
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">
                <ul>
                    <li>@ViewBag.SuccessMessage</li>
                </ul>
            </div>
        }
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                <ul>
                    <li>@ViewBag.ErrorMessage</li>
                </ul>
            </div>
        }

        <!-- Name -->
        <div class="form-group">
            <label for="Name">Name*:</label>
            <input type="text" class="form-control" id="Name" name="Name" asp-for="Name" required>
            <div class="invalid-feedback">Please enter the Name.</div>
        </div>

        <!-- Class -->
        <div class="form-group">
            <label for="ClassId">Class*:</label>
            <select class="form-control" id="ClassId" name="ClassId" asp-for="ClassId" required>
                @foreach (Class c in ViewBag.ClassList)
                {
                    <option value="@c.Id">@c.Name</option>
                }
            </select>
            <div class="invalid-feedback">Please select a Class.</div>
        </div>

        <!-- Description -->
        <div class="form-group">
            <label for="Description">Description:</label>
            <textarea class="form-control" id="Description" name="Description" asp-for="Description"></textarea>
        </div>

        <!-- Status -->
        <div class="form-group">
            <label for="statusToggle">Status</label>
            <div class="form-check form-switch">
                <input type="hidden" name="Status" value="false" id="StatusId"/>
                <input type="checkbox" class="form-check-input" id="statusToggle" name="Status" onchange="changeStatus()" />
            </div>
        </div>

        <br />
        <!-- Button submit -->
        <button type="submit" class="btn btn-primary" id="btnSubmit">Add Project</button>
    </form>
</div>
@Html.Partial("_ConfirmPartial", confirmMessage)

<script>
    function changeStatus() {
        var statusToggle = document.getElementById('statusToggle');
        var statusId = document.getElementById('StatusId');
        statusId.value = statusToggle.checked ? "true" : "false";
    }
</script>
