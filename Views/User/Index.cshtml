@model IEnumerable<User>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "User List";
}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center">

        <h1 class="mt-4">User List</h1>
        <div class="row">
            <div class="col-md-auto">
                <form asp-controller="User" asp-action="Import" method="post" enctype="multipart/form-data">
                    <label for="fileInput" class="btn btn-outline-success">
                        <i class="fas fa-upload"></i> Import
                    </label>
                    <input type="file" id="fileInput" name="file" style="display: none;" onchange="submitForm(this)">
                </form>
            </div>

            <div class="col-md-auto">
                <a id="exportButton" class="btn btn-outline-primary" asp-controller="User" asp-action="Export">
                    <i class="fas fa-download"></i> Export
                </a>
            </div>

            <div class="col-md-auto">
                <a class="btn btn-primary" asp-controller="User" asp-action="Create">
                    <i class="fas fa-plus"></i> New
                </a>
            </div>
        </div>

    </div>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
        <li class="breadcrumb-item active">User List</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
           Hiển thị thông tin người dùng
            <a target="_blank" href="https://datatables.net/">official DataTables documentation</a>
            .
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            User Table
        </div>
        <div class="card-body">
            <div class="mb-3 row">
                
                <div class="col-md-4 mb-3">
                    <label for="roleFilter" class="form-label">Filter by Role:</label>
                    <select id="roleFilter" class="form-select">
                        <option value="">All Roles</option>
                        <option value="Admin">Admin</option>
                        <option value="User">User</option>
                        <!-- Add more role options as needed -->
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="StatusFilter" class="form-label">Filter by Status:</label>
                    <select id="StatusFilter" class="form-select">
                        <option value="">All Status</option>
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                        <!-- Add more role options as needed -->
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="searchInput" class="form-label">Search:</label>
                    <input type="text" id="searchInput" class="form-control" placeholder="Search...">
                </div>

                <table class="table  table-bordered " id="sorttable-table">
                    <thead class="thead-dark">
                    <tr>
                        <th onclick="sortTable(0)">Name</th>
                        <th>Avatar</th>
                        <th onclick ="sortTable(1)">Role</th>
                        <th>Phone</th>
                        <th onclick="sortTable(2)">Address</th>
                        <th>Status</th>
                        <th class="sortable">Action</th>
                        
                        
                    </tr>
                </thead>
                    <tfoot class="tfoot-dark">
                    <tr>
                        <th>Name</th>
                        <th>Avatar</th>
                        <th>Role</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Status</th>
                        <th>Action</th>
                        
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>
                                <img src="@user.Avatar" alt="Avatar" width="50" height="50" />
                            </td>
                            <td>@user.Role.Value</td>
                            <td>@user.Phone</td>
                            <td>@user.Address</td>
                            @if (@user.Status == true)
                            {
                                <td>
                                    <form asp-action="ToggleStatus" asp-route-id="@user.Id" method="post">
                                        <button type="submit" class="btn btn-success btn-sm">
                                            Active
                                        </button>
                                    </form>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <form asp-action="ToggleStatus" asp-route-id="@user.Id" method="post">
                                        <button type="submit" class="btn btn-secondary btn-sm">
                                            Inactive
                                        </button>
                                    </form>
                                </td>
                            }
                                <td>
                                    <div class="btn-group" role="group" aria-label="User Actions">
                                        <a asp-action="Details" asp-route-id="@user.Id" asp-controller="User" class="btn btn-info">
                                            <i class="fas fa-eye"></i> Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@user.Id" asp-controller="User" class="btn btn-success">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <button asp-action="Delete" asp-route-id="@user.Id" asp-controller="User" class="btn btn-danger">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </div>
                                </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>
<div class="modal fade" id="exportSuccessModal" tabindex="-1" aria-labelledby="exportSuccessModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exportSuccessModalLabel">Export Successful</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Your data has been exported successfully.
            </div>
        </div>
    </div>
</div>
